{
  "openapi": "3.0.0",
  "info": {
    "title": "UniMate AI 学习计划 API",
    "version": "1.0.0",
    "description": "AI 智能生成学习计划接口"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "本地开发环境"
    }
  ],
  "paths": {
    "/api/ai/generate-plan": {
      "post": {
        "summary": "生成学习计划",
        "description": "根据用户目标、难度、截止日期和每日学习时长生成个性化学习计划",
        "tags": ["学习计划"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["flag", "daily_hours"],
                "properties": {
                  "user_id": {
                    "type": "string",
                    "example": "AN051",
                    "description": "用户ID"
                  },
                  "flag": {
                    "type": "string",
                    "example": "学会Python爬虫",
                    "description": "学习目标"
                  },
                  "difficulty": {
                    "type": "string",
                    "example": "初学者",
                    "enum": ["初学者", "中级", "高级"],
                    "description": "难度等级"
                  },
                  "deadline": {
                    "type": "string",
                    "format": "date",
                    "example": "2025-12-31",
                    "description": "截止日期"
                  },
                  "daily_hours": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 24,
                    "example": 3,
                    "description": "每日学习时长（小时）"
                  }
                }
              },
              "examples": {
                "Python爬虫": {
                  "value": {
                    "user_id": "AN051",
                    "flag": "学会Python爬虫",
                    "difficulty": "初学者",
                    "deadline": "2025-12-31",
                    "daily_hours": 3
                  }
                },
                "React开发": {
                  "value": {
                    "user_id": "AN051",
                    "flag": "掌握React前端开发",
                    "difficulty": "中级",
                    "deadline": "2025-06-30",
                    "daily_hours": 4
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "生成成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "plan_id": {
                          "type": "string",
                          "example": "plan_AN051_1731340800"
                        },
                        "flag": {
                          "type": "string",
                          "example": "学会Python爬虫"
                        },
                        "difficulty": {
                          "type": "string",
                          "example": "初学者"
                        },
                        "deadline": {
                          "type": "string",
                          "example": "2025-12-31"
                        },
                        "daily_hours": {
                          "type": "integer",
                          "example": 3
                        },
                        "stages": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "stage_id": {
                                "type": "integer",
                                "example": 1
                              },
                              "stage_name": {
                                "type": "string",
                                "example": "基础阶段"
                              },
                              "description": {
                                "type": "string",
                                "example": "掌握Python编程基础，学习数据结构和算法，了解网络编程概念"
                              },
                              "duration": {
                                "type": "string",
                                "example": "27天·81小时"
                              },
                              "is_completed": {
                                "type": "boolean",
                                "example": false
                              }
                            }
                          }
                        },
                        "evaluation": {
                          "type": "object",
                          "properties": {
                            "score": {
                              "type": "integer",
                              "example": 85
                            },
                            "details": {
                              "type": "string",
                              "example": "计划结构合理，阶段划分清晰..."
                            },
                            "key_points": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              },
                              "example": ["合理安排每日学习时间", "保持学习节奏"]
                            }
                          }
                        },
                        "token_usage": {
                          "type": "object",
                          "properties": {
                            "total": {
                              "type": "integer",
                              "example": 674
                            },
                            "cost": {
                              "type": "number",
                              "format": "float",
                              "example": 0.000236
                            }
                          }
                        },
                        "created_at": {
                          "type": "string",
                          "example": "2025-11-11 21:30:00"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "参数错误"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/ai/plans/{plan_id}/stages/{stage_id}": {
      "put": {
        "summary": "更新阶段状态",
        "description": "标记某个阶段为已完成或未完成",
        "tags": ["学习计划"],
        "parameters": [
          {
            "name": "plan_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "plan_AN051_1731340800"
            },
            "description": "计划ID"
          },
          {
            "name": "stage_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 3,
              "example": 1
            },
            "description": "阶段ID（1-3）"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["is_completed"],
                "properties": {
                  "is_completed": {
                    "type": "boolean",
                    "example": true,
                    "description": "是否完成"
                  }
                }
              },
              "examples": {
                "标记完成": {
                  "value": {
                    "is_completed": true
                  }
                },
                "取消完成": {
                  "value": {
                    "is_completed": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "更新成功"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "plan_id": {
                          "type": "string",
                          "example": "plan_AN051_1731340800"
                        },
                        "stage_id": {
                          "type": "integer",
                          "example": 1
                        },
                        "is_completed": {
                          "type": "boolean",
                          "example": true
                        },
                        "progress": {
                          "type": "string",
                          "example": "33%"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "参数错误"
          },
          "404": {
            "description": "计划不存在"
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "健康检查",
        "description": "检查服务是否正常运行",
        "tags": ["系统"],
        "responses": {
          "200": {
            "description": "服务正常",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "学习计划",
      "description": "AI 学习计划相关接口"
    },
    {
      "name": "系统",
      "description": "系统相关接口"
    }
  ]
}